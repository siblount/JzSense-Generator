var oShader;

/**********************************************************************/
setBusyCursor();

Material.setMaterialName( "RiSpec Plastic" );

oShader = new DzRSLShader;
Material.addShader( oShader );
oShader.setShaderType( DzRSLShader.Surface );
oShader.setShaderFile( "RiSpec/plastic" );
oShader.setDefinitionFile( "support/RiSpec/shaderDefinitions/surface/plasticSurf.dsa" );
oShader.setActiveInShadowPass( true );

oShader = new DzRSLShader;
Material.addShader( oShader );
oShader.setShaderType( DzRSLShader.Surface );
oShader.setShaderFile( "RiSpec/constant" );
oShader.setDefinitionFile( "support/RiSpec/shaderDefinitions/surface/constantSurf.dsa" );
oShader.setOnlyInShadowPass( true );

//Set up baking shader
oShader = new DzRSLShader;
Material.addShader( oShader );
oShader.setShaderType( DzRSLShader.Surface );
oShader.setShaderFile( "RiSpec/bakedPlastic" );
oShader.setDefinitionFile( "support/RiSpec/shaderDefinitions/surface/plasticSurf.dsa" );
oShader.setActiveInShadowPass( false );
oShader.setActiveInBeautyPass( false );
oShader.setActiveInBakePass( true );

clearBusyCursor();
